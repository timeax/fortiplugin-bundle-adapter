{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],
    "resolveJsonModule": true,

    "noEmit": true,
    "isolatedModules": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tsup.config.ts"]
}